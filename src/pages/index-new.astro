<MainLayout title="About - Chiara Pia D'Ambrosio">
  <!-- Hero Section with Background -->
  <div class="hero-section">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">Chiara Pia D'Ambrosio</h1>
        <p class="hero-subtitle">PhD Student in Strategy & Entrepreneurship</p>
        <p class="hero-affiliation">London Business School</p>
      </div>
      <div class="hero-image">
        <div class="profile-container">
          <img 
            src="/assets/profile-image.jpeg" 
            alt="Chiara Pia D'Ambrosio" 
            class="profile-image-hero"
          />
          <div class="profile-ring"></div>
        </div>
      </div>
    </div>
