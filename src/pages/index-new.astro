<style>
  /* Hero Section with Background */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary), #003080);
    color: white;
    margin: -2rem -2rem 4rem -2rem;
    padding: 2rem;
    overflow: hidden;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    animation: fadeInUp 1s ease-out;
  }

  .hero-text {
    animation: fadeInLeft 1.2s ease-out 0.3s both;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    animation: none;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    opacity: 0.95;
    font-weight: 300;
    animation: none;
  }

  .hero-affiliation {
    font-size: 1.2rem;
    opacity: 0.9;
    font-weight: 400;
    animation: none;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    animation: fadeInRight 1.2s ease-out 0.6s both;
  }

  .profile-container {
    position: relative;
    width: 300px;
    height: 300px;
  }

  .profile-image-hero {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    transition: all 0.5s ease-in-out;
  }

  .profile-image-hero:hover {
    transform: scale(1.05);
    border-color: rgba(255, 255, 255, 0.6);
  }

  .profile-ring {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    animation: pulse 3s infinite;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.8);
    animation: bounce 2s infinite;
    cursor: pointer;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  /* Content Section */
  .about-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    animation: fadeInUp 0.8s ease-out;
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    animation: none;
  }

  .section-divider {
    width: 80px;
    height: 3px;
    background: linear-gradient(90deg, var(--color-blue-institutional), #003080);
    margin: 0 auto;
    border-radius: 2px;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  .content-main {
    animation: fadeInLeft 0.8s ease-out 0.4s both;
  }

  .intro-text {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-blue-institutional);
    margin-bottom: 1.5rem;
    line-height: 1.8;
    animation: none;
  }

  .content-sidebar {
    animation: fadeInRight 0.8s ease-out 0.6s both;
  }

  .info-card {
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    padding: 2rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    border-left: 4px solid var(--color-blue-institutional);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease-in-out;
  }

  .info-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
  }

  .info-card h3 {
    color: var(--color-blue-institutional);
    margin-bottom: 1rem;
    font-size: 1.2rem;
    animation: none;
  }

  .info-card p {
    margin-bottom: 0.75rem;
    animation: none;
  }

  .info-card ul {
    list-style: none;
    padding: 0;
  }

  .info-card li {
    padding: 0.25rem 0;
    position: relative;
    padding-left: 1.5rem;
  }

  .info-card li::before {
    content: "▸";
    position: absolute;
    left: 0;
    color: var(--color-blue-institutional);
    font-weight: bold;
  }

  /* Action Buttons */
  .action-buttons {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 4rem;
    animation: fadeInUp 0.8s ease-out 0.8s both;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--color-blue-institutional), #003080);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 30, 98, 0.3);
  }

  .btn-outline {
    background: transparent;
    color: var(--color-blue-institutional);
    border: 2px solid var(--color-blue-institutional);
  }

  .btn-outline:hover {
    background: var(--color-blue-institutional);
    color: white;
    transform: translateY(-3px);
  }

  /* Contact Cards */
  .contact-section {
    margin-top: 4rem;
    animation: fadeInUp 0.8s ease-out 1s both;
  }

  .contact-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .contact-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease-in-out;
    border: 1px solid #f0f0f0;
  }

  .contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    border-color: var(--color-blue-institutional);
  }

  .contact-icon {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--color-blue-institutional), #003080);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s ease-in-out;
  }

  .contact-card:hover .contact-icon {
    transform: scale(1.1);
    animation: pulse 1.5s infinite;
  }

  .contact-info h4 {
    margin: 0 0 0.5rem 0;
    color: var(--color-blue-institutional);
    font-size: 1.1rem;
  }

  .contact-info p {
    margin: 0;
    color: var(--color-gray-muted);
    font-size: 0.95rem;
    animation: none;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-section {
      margin: -1rem -1rem 2rem -1rem;
      padding: 1rem;
      min-height: 80vh;
    }

    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 2rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .profile-container {
      width: 200px;
      height: 200px;
    }

    .content-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .action-buttons {
      flex-direction: column;
      align-items: center;
    }

    .contact-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
