        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .about-page {
    margin-top: 1rem;
    min-height: 80vh;
  }

  .about-content {
    background: var(--color-white);
    border-radius: 12px;
    padding: 3rem;
    margin: 2rem 0;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--color-gray-light);
  }

  .contact-section {
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-gray-light);
    animation: fadeInUp 0.8s ease-out 1s both;
  }

  .contact-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--color-text-primary);
    text-decoration: none;
    padding: 1.25rem;
    border-radius: 12px;
    transition: all 0.3s ease-in-out;
    border: 2px solid var(--color-gray-light);
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(5px);
    opacity: 0;
    animation: fadeInUp 0.6s ease-out calc(1.2s + var(--delay, 0s)) both;
    position: relative;
    overflow: hidden;
  }

  .contact-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(0, 30, 98, 0.1), transparent);
    transition: left 0.6s ease-in-out;
  }

  .contact-link:hover::before {
    left: 100%;
  }

  .contact-link:nth-child(1) { --delay: 0s; }
  .contact-link:nth-child(2) { --delay: 0.1s; }
  .contact-link:nth-child(3) { --delay: 0.2s; }

  .contact-link:hover {
    color: var(--color-blue-institutional);
    text-decoration: none;
    transform: translateY(-3px);
    border-color: var(--color-blue-institutional);
    box-shadow: 0 8px 25px rgba(0, 30, 98, 0.15);
    background: rgba(255, 255, 255, 0.95);
  }

  .contact-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, var(--color-blue-institutional), #003080);
    border-radius: 12px;
    flex-shrink: 0;
    transition: all 0.3s ease-in-out;
  }

  .contact-icon svg {
    color: white;
    transition: all 0.3s ease-in-out;
  }

  .contact-link:hover .contact-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 4px 15px rgba(0, 30, 98, 0.3);
  }

  .contact-link:hover .contact-icon svg {
    animation: pulse 1.5s infinite;
  }

  .contact-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .contact-label {
    font-weight: 600;
    font-size: 1rem;
    color: var(--color-blue-institutional);
    transition: all 0.3s ease-in-out;
  }

  .contact-value {
    font-size: 0.9rem;
    color: var(--color-gray-muted);
    transition: all 0.3s ease-in-out;
  }

  .contact-link:hover .contact-value {
    color: var(--color-text-primary);
  }

  @media (max-width: 768px) {
    .about-content {
      padding: 2rem 1rem;
      margin: 1rem;
    }

    .contact-links {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .contact-link {
      padding: 1rem;
    }

    .contact-icon {
      width: 45px;
      height: 45px;
    }

    .about-background {
      filter: blur(2px);
      opacity: 0.15;
    }
  }

  @media (max-width: 480px) {
    .contact-text {
      font-size: 0.9rem;
    }
    
    .contact-label {
      font-size: 0.95rem;
    }
    
    .contact-value {
      font-size: 0.85rem;
    }
  }

  /* Migliora la leggibilit√† del testo */
  .about-content h1,
  .about-content h2,
  .about-content h3 {
    text-shadow: 0 1px 3px rgba(255, 255, 255, 0.8);
  }

  .about-content p {
    text-shadow: 0 1px 2px rgba(255, 255, 255, 0.6);
  }
</style>
