<style>
  .footer {
    background-color: var(--color-white);
    border-top: 1px solid var(--color-gray-light);
    margin-top: 4rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 2rem;
    padding: 3rem 0;
    color: var(--color-gray-muted);
  }

  .footer-left .copyright {
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .footer-left .affiliation {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.5;
  }

  .footer-left .affiliation a {
    color: var(--color-blue-institutional);
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }

  .footer-left .affiliation a:hover {
    text-decoration: underline;
  }

  .quick-links h4,
  .contact-info h4 {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    color: var(--color-blue-institutional);
    font-weight: 600;
  }

  .quick-links a,
  .contact-info a {
    display: block;
    color: var(--color-gray-muted);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    transition: all 0.2s ease-in-out;
  }

  .quick-links a:hover,
  .contact-info a:hover {
    color: var(--color-blue-institutional);
    text-decoration: none;
    transform: translateX(3px);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
      padding: 2rem 0;
    }
    
    .quick-links a:hover,
    .contact-info a:hover {
      transform: none;
    }
  }
</style>
